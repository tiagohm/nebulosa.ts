{
	"printWidth": 999,
	"singleQuote": true,
	"useTabs": true,
	"tabWidth": 4,
	"bracketSpacing": true,
	"htmlWhitespaceSensitivity": "ignore",
	"bracketSameLine": true,
	"singleAttributePerLine": true,
	"trailingComma": "all",
	"semi": false,
	"endOfLine": "lf",
	"overrides": [
		{
			"files": "*.html",
			"options": {
				"parser": "html"
			}
		},
		{
			"files": "*.scss",
			"options": {
				"parser": "scss"
			}
		},
		{
			"files": "*.json",
			"excludeFiles": "*-lock.json",
			"options": {
				"parser": "json"
			}
		},
		{
			"files": "*.ts",
			"options": {
				"experimentalTernaries": false,
				"parser": "typescript"
			}
		}
	]
}
